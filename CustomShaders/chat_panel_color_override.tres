[sub_resource type="Shader" id=1]
code = "shader_type canvas_item;

uniform float r_color = 182.0;
uniform float g_color = 255.0;
uniform float b_color = 244.0;

void fragment() {
	vec3 background_color = vec3(r_color, g_color, b_color);

	vec4 tex_color = texture(TEXTURE, UV);

	float gray = dot(tex_color.rgb, vec3(0.299, 0.587, 0.114));
	vec3 grayscale_color = vec3(gray);
	
	float r = background_color.x / 255.0;
	float g = background_color.y / 255.0;
	float b = background_color.z / 255.0;
	vec3 replacement_color = vec3(r, g, b);
    vec4 new_color = vec4(replacement_color, 1.0);

	vec3 mixed_color = mix(grayscale_color, replacement_color, gray);
	new_color.rgb *= mixed_color;

	COLOR = new_color;

}"

